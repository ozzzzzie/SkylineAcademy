@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<br />
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <br />
                <h2>Use a school account to login to system.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div><br />
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div><br />
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div><br />
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    <br />

                </div><br />
                <div>
                    
                        <a id="forgot-password" asp-page="./ForgotPassword" class="btn btn-secondary" role="button">Forgot your password?</a>
                    <br />
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-secondary" role="button">Register as a new user</a>
                    <br />
                        <a data-bs-toggle ="modal" data-bs-target="#myModal" class="btn btn-secondary" role="button">Test Users</a>

                </div>
            </form>
        </section>
        

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


