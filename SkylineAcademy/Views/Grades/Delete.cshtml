@model SkylineAcademy.Models.Grade

@{
    ViewData["Title"] = "Delete";
}
<br />
<h1>Delete</h1>

<h3>Are you sure you want to delete this grade?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Enrollement ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnrollementId)
        </dd>
        <dt class = "col-sm-2">
            Midterm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Midterm)
        </dd>
        <dt class = "col-sm-2">
            Final
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Final)
        </dd>
        <dt class = "col-sm-2">
            Total
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class="col-sm-2">
            Pass/Fail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Passedcourse)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="GradeId" /><input type="submit" value="Delete" class="btn btn-danger" />
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Index"><button type="button" class="btn btn-light">Back to List</button></a>

        }
        else if (User.IsInRole("Super Admin"))
        {
            <a asp-action="Index"><button type="button" class="btn btn-light">Back to List</button></a>
        }
        else if (User.IsInRole("Teacher"))
        {
            <a asp-action="TeacherStudentsGrades"><button type="button" class="btn btn-light">Back to List</button></a>
        }
    </form>
</div>
