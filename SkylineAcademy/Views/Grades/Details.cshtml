@model SkylineAcademy.Models.Grade

@{
    ViewData["Title"] = "Details";
}
<br />
<h1>Details</h1>

<div>
    <h4>Grade</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Enrollement ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnrollementId)
        </dd>
        <dt class = "col-sm-2">
            Midterm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Midterm)
        </dd>
        <dt class = "col-sm-2">
            Final
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Final)
        </dd>
        <dt class = "col-sm-2">
            Total
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class="col-sm-2">
            Pass/Fail
        </dt>
        <dd class="col-sm-10">

            @if (Model.Passedcourse == true)
            {
                <text>Passed</text>
            } else
            {
                <text>Failed</text>
            }
          </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.GradeId"><button type="button" class="btn btn-dark">Edit</button></a>
        <a asp-action="Index"><button type="button" class="btn btn-light">Back to List</button></a>

    }
    else if (User.IsInRole("Super Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.GradeId"><button type="button" class="btn btn-dark">Edit</button></a>
        <a asp-action="Index"><button type="button" class="btn btn-light">Back to List</button></a>
    } 
    else if (User.IsInRole("Teacher"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.GradeId"><button type="button" class="btn btn-dark">Edit</button></a>
        <a asp-action="TeacherStudentsGrades"><button type="button" class="btn btn-light">Back to List</button></a>
    }
    else
    {
        <a asp-action="Index"><button type="button" class="btn btn-light">Back to List</button></a>

    }
