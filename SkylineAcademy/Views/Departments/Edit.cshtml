@model SkylineAcademy.Models.Department

@{
    ViewData["Title"] = "Edit";
}
<br />
<h1>Edit</h1>

<h4>Department</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DepartmentId" />
            <div class="form-group">
                <label asp-for="Dname" class="control-label">Department Name</label>
                <input asp-for="Dname" class="form-control" />
                <span asp-validation-for="Dname" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="Ddescription" class="control-label">Description</label>
                <input asp-for="Ddescription" class="form-control />
                <span asp-validation-for="Ddescription" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-dark" />
                <a asp-action="Index"><button type="button" class="btn btn-light">Back to List</button></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
