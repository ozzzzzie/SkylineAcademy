@model SkylineAcademy.Models.Major

@{
    ViewData["Title"] = "Details";
}
<br/ >
<h1>Details</h1>


<div>
    <h4>Major</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mname)
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mdescription)
        </dd>
        <dt class = "col-sm-2">
            Faculty
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Faculty.Fname)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin")) {
        <a asp-action="Edit" asp-route-id="@Model?.MajorId"><button type="button" class="btn btn-dark">Edit</button></a>
        <a asp-action="Index"><button type="button" class="btn btn-light">Back to List</button></a>

    } else if (User.IsInRole("Super Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.MajorId"><button type="button" class="btn btn-dark">Edit</button></a>
        <a asp-action="Index"><button type="button" class="btn btn-light">Back to List</button></a>
    } else
    {
        <a asp-action="Index"><button type="button" class="btn btn-light">Back to List</button></a>

    }
</div>
