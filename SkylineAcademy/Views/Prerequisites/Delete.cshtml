@model SkylineAcademy.Models.Prerequisite

@{
    ViewData["Title"] = "Delete";
}
<br />
<h1>Delete</h1>

<h3>Are you sure you want to delete this prerequisite?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Course ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseId)
        </dd>
        <dt class = "col-sm-2">
            Prequisite ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrerequisiteId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CourseId" />
        <input type="hidden" asp-for="PrerequisiteId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index"><button type="button" class="btn btn-light">Back to List</button></a>
    </form>
</div>
