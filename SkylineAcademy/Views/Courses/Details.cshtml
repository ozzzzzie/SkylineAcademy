@model SkylineAcademy.Models.Course

@{
    ViewData["Title"] = "Details";
}

<br/ >
<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cname)
        </dd>
        <dt class = "col-sm-2">
           Credits
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Credits)
        </dd>
        <dt class = "col-sm-2">
            Major
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Major.Mname)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CourseId"><button type="button" class="btn btn-dark">Edit</button></a> 
    <a asp-action="Index"><button type="button" class="btn btn-light">Back to List</button></a>
</div>
