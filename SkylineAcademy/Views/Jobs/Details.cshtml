@model SkylineAcademy.Models.Job

@{
    ViewData["Title"] = "Details";
}

<br/ >
<h1>Details</h1>


<div>
    <h4>Job</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Jname)
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Jdescription)
        </dd>
        <dt class = "col-sm-2">
            Department
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Department.Dname)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.JobId"><button type="button" class="btn btn-dark">Edit</button></a> 
    <a asp-action="Index"><button type="button" class="btn btn-light">Back to List</button></a>
</div>
