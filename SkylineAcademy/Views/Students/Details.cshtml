@model SkylineAcademy.Models.Student

@{
    ViewData["Title"] = "Details";
}
<br/ >
<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            First Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sfname)
        </dd>
        <dt class = "col-sm-2">
            Last Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Slname)
        </dd>
        <dt class = "col-sm-2">
            Address
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Saddress)
        </dd>
        <dt class = "col-sm-2">
            Phone Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sphonenumber)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Semail)
        </dd>
        <dt class = "col-sm-2">
            Major
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Major.Mname)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.StudentId"><button type="button" class="btn btn-dark">Edit</button></a> 
    <a asp-action="Index"><button type="button" class="btn btn-light">Back to List</button></a>
</div>
