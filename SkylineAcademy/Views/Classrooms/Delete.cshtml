@model SkylineAcademy.Models.Classroom

@{
    ViewData["Title"] = "Delete";
}

<br />
<h1>Delete</h1>


<h3>Are you sure you want to delete this classroom?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Capacity
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class = "col-sm-2">
            Facilities
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Facilities)
        </dd>
    </dl>
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="ClassroomId" />
<input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index"><button type="button" class="btn btn-light">Back to List</button></a>
    </form>
</div>
