@model SkylineAcademy.Models.Enrollement

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this enrollement?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Student ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Student.StudentId)
        </dd>
        <dt class = "col-sm-2">
            Schedule ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Schedule.ScheduleId)
        </dd>
        <dt class = "col-sm-2">
            Enrollement Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnrollementDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="EnrollementId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index"><button type="button" class="btn btn-light">Back to List</button></a>
    </form>
</div>
