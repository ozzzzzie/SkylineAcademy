@model SkylineAcademy.Models.Teacher

@{
    ViewData["Title"] = "Delete";
}
<br />
<h1>Delete</h1>

<h3>Are you sure you want to delete this teacher?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            First Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tfname)
        </dd>
        <dt class = "col-sm-2">
            Last Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tlname)
        </dd>
        <dt class = "col-sm-2">
            Address
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Taddress)
        </dd>
        <dt class = "col-sm-2">
            Phone Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tphonenumber)
        </dd>
        <dt class = "col-sm-2">
            Head of Faculty
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ishead)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Faculty Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Faculty.Fname)
        </dd>
    </dl>
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="TeacherId" />
       <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index"><button type="button" class="btn btn-light">Back to List</button></a>
    </form>
</div>
