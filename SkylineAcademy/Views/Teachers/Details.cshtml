@model SkylineAcademy.Models.Teacher

@{
    ViewData["Title"] = "Details";
}

<br/ >
<h1>Details</h1>

<div>
    <h4>Teacher</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            First Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tfname)
        </dd>
        <dt class = "col-sm-2">
            Last Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tlname)
        </dd>
        <dt class = "col-sm-2">
           Address
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Taddress)
        </dd>
        <dt class = "col-sm-2">
            Phone Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tphonenumber)
        </dd>
        <dt class = "col-sm-2">
            Head of Faculty
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ishead)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Faculty
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Faculty.Fname)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.TeacherId"><button type="button" class="btn btn-dark">Edit</button></a> 
    <a asp-action="Index"><button type="button" class="btn btn-light">Back to List</button></a>
</div>
